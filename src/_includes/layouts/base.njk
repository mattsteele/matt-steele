<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ author.name }} | {{ renderData.title or navtitle or title }}</title>


    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">

    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">


    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

    {% include "meta.njk" %}
  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <ul class="nav">
        {%- for nav in collections.nav -%}
          {%- set isCurrent = (nav.url == page.url) -%}
          {%- set isParent = nav.url != '/' and nav.url in page.url -%}
        <li class="nav-item{% if isCurrent or isParent %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer>
      <ul>
        <li><a href="/feed.xml">RSS</a></l1>
        <li><a href="https://github.com/mattsteele">GitHub</a></l1>
        <li><a href="https://www.linkedin.com/in/mattwsteele/">LinkedIn</a></l1>
      </ul>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
    <script src="{{ '/assets/js/app.js' | url }}" defer></script>

  </body>
</html>
